<?xml version="1.0" encoding="utf-8"?>


<layout>

    <data>

        <variable
            name="home"
            type="com.sosaley.streetlight.home.modelview.HomeViewModel" />
    </data>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.view.HomeFragment">


    <LinearLayout
        android:id="@+id/firstRow"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <soup.neumorphism.NeumorphCardView
            android:layout_width="0dp"
            android:layout_height="110dp"
            app:neumorph_backgroundColor="@color/utha"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"

                >

            <TextView
                android:id="@+id/noOfConTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No. Of Controllers"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/contrCountTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_below="@id/noOfConTxt"
                android:textStyle="bold"

                />
            </RelativeLayout>

        </soup.neumorphism.NeumorphCardView>

        <soup.neumorphism.NeumorphCardView
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            app:neumorph_backgroundColor="@color/yellow"
            app:cardCornerRadius="5dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"

                >

                <TextView
                    android:id="@+id/ConOffTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No. Of Controllers"
                    android:textStyle="bold"
                    android:textSize="16sp"
android:textColor="@color/white"
                    />

                <TextView
                    android:id="@+id/contrOffCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_below="@id/ConOffTxt"
                    android:textStyle="bold"

                    />
            </RelativeLayout>



        </soup.neumorphism.NeumorphCardView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondRow"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal"
        android:layout_below="@id/firstRow"
        android:weightSum="2">

        <soup.neumorphism.NeumorphCardView
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            app:neumorph_backgroundColor="#33691e"
            app:cardCornerRadius="5dp"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                >

                <TextView
                    android:id="@+id/conOnTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Controllers ON"
                    android:textStyle="bold"
                    android:textColor="@color/white"

                    />

                <TextView
                    android:id="@+id/contrCountOnTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16"
                    android:textColor="@color/white"
                    android:layout_below="@id/conOnTxt"
                    android:textStyle="bold"

                    />
            </RelativeLayout>

        </soup.neumorphism.NeumorphCardView>

        <soup.neumorphism.NeumorphCardView
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            app:cardCornerRadius="5dp"
            app:neumorph_backgroundColor="@color/red"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                >

                <TextView
                    android:id="@+id/alertReportTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alert Reports"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/white"

                    />

                <TextView
                    android:id="@+id/alertReportCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_below="@id/alertReportTxt"
                    android:textStyle="bold"

                    />
            </RelativeLayout>



        </soup.neumorphism.NeumorphCardView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/thirdRow"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal"
        android:layout_below="@id/secondRow"
        android:weightSum="2">

        <soup.neumorphism.NeumorphCardView
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            app:cardCornerRadius="5dp"
            app:neumorph_backgroundColor="@color/light_blue"


            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                >

                <TextView
                    android:id="@+id/nonBurTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Controllers ON"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/white"

                    />

                <TextView
                    android:id="@+id/nonBurnCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_below="@id/nonBurTxt"
                    android:textStyle="bold"

                    />
            </RelativeLayout>

        </soup.neumorphism.NeumorphCardView>

        <soup.neumorphism.NeumorphCardView
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            app:cardCornerRadius="5dp"
            app:neumorph_backgroundColor="@color/gray"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                >

                <TextView
                    android:id="@+id/manualTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manual"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"

                    />

                <TextView
                    android:id="@+id/manualCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_below="@id/manualTxt"
                    android:textStyle="bold"

                    />
            </RelativeLayout>



        </soup.neumorphism.NeumorphCardView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/fourthRow"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal"
        android:layout_below="@id/thirdRow"
        android:weightSum="2">

        <soup.neumorphism.NeumorphCardView
            android:layout_width="0dp"
            android:layout_height="110dp"
            app:neumorph_backgroundColor="#000000"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"

                >

                <TextView
                    android:id="@+id/commErrorTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Communication Error"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/commErrorCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:layout_below="@id/commErrorTxt"
                    android:textStyle="bold" />
            </RelativeLayout>

        </soup.neumorphism.NeumorphCardView>




    </LinearLayout>


    <ImageView
        android:id="@+id/mapImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fourthRow"
        android:layout_margin="10dp"
        android:src="@drawable/map"
        android:fitsSystemWindows="true"
        />

</RelativeLayout>

</layout>